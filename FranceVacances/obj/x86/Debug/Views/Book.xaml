<Page
    x:Class="FranceVacances.Views.Book"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FranceVacances.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mv="using:FranceVacances.ModelView"
    mc:Ignorable="d" Width="1190" Height="820">

    <Grid x:ConnectionId='1' Background="Teal" Name="MainGrid" Height="820" VerticalAlignment="Bottom">
        <Grid Margin="35,130,25,210">

            <CalendarView x:ConnectionId='5' IsEnabled="True" Visibility="Visible" Margin="275,7,0,131"
                x:Name="Calendar"
                                                                                  
                                                                     SelectionMode="Multiple" Height="342" Width="375"/>
            <TextBlock x:ConnectionId='6' x:Name="title"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                Text="TextBlock"
                VerticalAlignment="Top"
                Margin="700,-58,0,0"
                Width="420"
                Height="80"
                TextAlignment="Center"
                FontSize="50"
                Foreground="#FFFFD68B"/>
            <Button x:ConnectionId='7' x:Name="checkout"
                                      
                Content="Checkout"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,381,0,0"
                Height="81"
                Width="255"
                FontSize="20"
                Foreground="#FFFFD68B" />

            <ToggleSwitch x:ConnectionId='8' x:Name="toggleSwitch" Header="Do you have an account?"  HorizontalAlignment="Left" Margin="45,0,0,0" VerticalAlignment="Top" OffContent="No" OnContent="Yes"                               />
            <Grid x:ConnectionId='9' Name="RegisterView" Margin="0,60,875,99">
                <Grid x:ConnectionId='15' Name="registerFields" Margin="0,0,0,13" Visibility="Visible">
                    <TextBox x:ConnectionId='16' x:Name="user" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username" TextAlignment="Center" VerticalAlignment="Top" Height="35" Width="255" RenderTransformOrigin="0.5,0.889"                                                    />
                    <TextBox x:ConnectionId='17' x:Name="pass" HorizontalAlignment="Left" Margin="0,55,0,0" TextWrapping="Wrap" Text="Password" TextAlignment="Center" VerticalAlignment="Top" Height="35" Width="255" RenderTransformOrigin="0.5,0.889"                                                    />
                    <TextBox x:ConnectionId='18' x:Name="email" HorizontalAlignment="Left" Margin="0,220,0,0" TextWrapping="Wrap" Text="E-Mail" TextAlignment="Center" VerticalAlignment="Top" Height="35" Width="255" RenderTransformOrigin="0.5,0.889"                                                    />
                    <TextBox x:ConnectionId='19' x:Name="phone" HorizontalAlignment="Left" Margin="0,165,0,0" TextWrapping="Wrap" Text="Phone Number" TextAlignment="Center" VerticalAlignment="Top" Height="35" Width="255" RenderTransformOrigin="0.5,0.889"                                                    />
                    <TextBox x:ConnectionId='20' x:Name="passwordcheck" HorizontalAlignment="Left" Margin="0,110,0,0" TextWrapping="Wrap" Text="Password Again" TextAlignment="Center" VerticalAlignment="Top" Height="35" Width="255" RenderTransformOrigin="0.5,0.889"                                                    />
                    <CalendarDatePicker x:ConnectionId='21' HorizontalAlignment="Left" Margin="0,275,0,0" PlaceholderText="Select your birthday" VerticalAlignment="Top" x:Name="DateOfBirth" DisplayMode="Year" DateFormat="{}{day.integer}/{month.integer}/{year.full}" Height="33" Width="255"/>

                </Grid>

            </Grid>

            <TextBlock x:ConnectionId='10' x:Name="price"
                FontSize="30"
                Foreground="#FFFFD68B"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Text="Price per day: 0$"
                VerticalAlignment="Top"
                Margin="700,389,0,0" Width="415" Height="47" />
            <TextBlock x:ConnectionId='11' x:Name="total"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Text="Total price: 0$"
                VerticalAlignment="Top"
                Margin="275,357,0,0"
                FontSize="30"
                Foreground="#FFFFD68B" RenderTransformOrigin="0.491,-0.2" Width="375" Height="47" />
            <Button x:ConnectionId='12' x:Name="clearbutton"
                Content="Clear Selection"
                Background="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="430,7,0,0"
                                          Height="46" Width="120" />
            <Image x:ConnectionId='13' x:Name="image" HorizontalAlignment="Left" Height="341" Margin="700,27,0,0" VerticalAlignment="Top" Width="415"/>
            <TextBlock x:ConnectionId='14' x:Name="info"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Text=""
                VerticalAlignment="Top"
                Margin="275,415,0,0"
                FontSize="20"
                Foreground="#FFFFD68B" RenderTransformOrigin="0.491,-0.2" Width="375" Height="47" />


        </Grid>
        <Grid x:ConnectionId='2' Name="loginView" Margin="35,290,900,440" Visibility="Collapsed">
            <TextBox x:ConnectionId='3' x:Name="l_username" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Text="Username" VerticalAlignment="Top" Width="255"                                                    />
            <TextBox x:ConnectionId='4' x:Name="l_password" HorizontalAlignment="Left" Margin="0,50,0,0" TextAlignment="Center" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="255"                                                    />
           


        </Grid>


    </Grid>
</Page>

